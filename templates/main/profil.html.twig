{% extends 'base.html.twig'%}

{% block title %}{{ parent()}} |Profil {% endblock%}

{% block body%}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

        <h2>Mon Profil</h2>
        <div type="placeholder">Pseudo : {{app.user.pseudo}}</div>
        <div>Prénom : {{app.user.prenom}}</div>

        <div>Téléphone : {{app.user.telephone}}</div>
        <div>Email : {{app.user.email}}</div>
        <div>Mot de passe : </div>
        <div>Confirmation : </div>
        <div>Campus : </div>
        <div>Ma photo :</div>
        <button class="btn btn-lg btn-primary" type="submit">
            Enregistrer
        </button>
        <button class="btn btn-lg btn-primary" type="reset">
            Annuler
        </button>



    {% endif %}




{% endblock %}
